<form method="post" action="{{ path('app_offer_delete', {slug: offer.slug}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
    <button class="btn m-3" type="submit" style="background-color: #001935; color:white;">Supprimer</button>
</form>
